<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Database Insertion Form</title>
</head>
<body>
    <form action="/update" method="post">
        <label for="name">Employee Name:</label>
        <input type="text" name="name" id="name" value="<%= db.name %>">
        <br><br><br>
        <label for="age">Employee Age:</label>
        <input type="number" name="age" id="age" value="<%= db.age %>">
        <br><br><br>
        <label for="city">Employee City:</label>
        <input type="text" name="city" id="city" value="<%= db.city %>">
        <br><br><br>
        <label for="salary">Employee Salary:</label>
        <input type="number" name="salary" id="salary" value="<%= db.salary %>">
        <br><br><br>
        <button type="submit">UpdateData</button>
        <input type="hidden" name="Id" value="<%= db._id %>">
    </form>
</body>
</html>